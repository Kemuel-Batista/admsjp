// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("users")
}

model Department {
  id          String @id @default(uuid())
  name        String @unique
  description String

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("departments")
}

model Church {
  id           String  @id @default(uuid())
  name         String  @unique
  description  String
  street       String
  neighborhood String
  city         String
  state        String
  postalCode   String  @map("postal_code")
  number       String
  latitude     Decimal
  longitude    Decimal
  username     String
  password     String

  @@map("churchs")
}
